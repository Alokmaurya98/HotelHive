<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="container mx-auto bg-gradient-to-br from-blue-50 to-indigo-100 shadow-lg rounded-lg p-12 mt-12 max-w-6xl">
          <h2 class="text-4xl text-indigo-700 font-bold text-center mb-8 shadow-lg">
              Details of <%= home.houseName %>
          </h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
              <div class="rounded-lg overflow-hidden">
                  <img src="<%= home.photo %>" alt="<%= home.name %>" class="w-full h-96 object-cover">
              </div>
              
              <div class="space-y-6">
                  <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-lg border border-gray-200 shadow-md">
                      <h3 class="text-2xl font-semibold mb-2 text-indigo-700">Description</h3>
                      <p class="text-gray-600"><%= home.description %></p>
                  </div>

                  <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-lg border border-gray-200 shadow-md">
                      <h3 class="text-2xl font-semibold mb-2 text-indigo-700">Location</h3>
                      <p class="text-gray-600"><%= home.location %></p>
                  </div>

                  <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-lg border border-gray-200 shadow-md">
                      <h3 class="text-2xl font-semibold mb-2 text-indigo-700">Price</h3>
                      <p class="text-red-500 text-xl font-bold">Rs<%= home.price %> / night</p>
                  </div>

                  <div class="bg-gradient-to-br from-white to-gray-50 p-6 rounded-lg border border-gray-200 shadow-md">
                      <h3 class="text-2xl font-semibold mb-2 text-indigo-700">Rating</h3>
                      <div class="flex items-center">
                          <span class="text-yellow-400 text-xl">â˜…</span>
                          <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
                      </div>
                  </div>
                  <div class="mt-4">
  <a href="/rules/<%= home._id %>" class="inline-flex items-center text-indigo-500 hover:text-indigo-600 font-semibold">
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    Download House Rules
  </a>
</div>

                  <div class="mt-2">
                    <%- include('../partials/favourite') %>
                  </div>
              </div>
          </div>
      </main>
  </body>
</html>