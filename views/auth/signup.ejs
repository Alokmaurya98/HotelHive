<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-700 via-gray-500 to-slate-800 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="min-h-screen flex items-center justify-center py-12 px-4">
    <div class="w-full max-w-md">
      <div class="bg-gradient-to-br from-slate-900 via-gray-800 to-black rounded-2xl shadow-2xl p-8 border border-gray-800">
        <div class="text-center mb-6">
          <h1 class="text-3xl md:text-4xl font-extrabold mb-2
                     bg-gradient-to-r from-pink-300 via-purple-400 to-indigo-400
                     bg-clip-text text-transparent drop-shadow-xl">
            Create Account
          </h1>
          <p class="text-sm text-gray-300">Join EliteStay and start hosting or booking</p>
        </div>

        <form action="/signup" method="POST" class="space-y-5">
          <%- include('../partials/error') %>

          <!-- Name Row -->
          <div class="grid grid-cols-2 gap-4">
            <input
              required
              type="text"
              name="firstName"
              placeholder="First Name"
              value="<%= oldInput && oldInput.firstName ? oldInput.firstName : '' %>"
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"/>
            <input
              required
              type="text"
              name="lastName"
              placeholder="Last Name"
              value="<%= oldInput && oldInput.lastName ? oldInput.lastName : '' %>"
              class="w-full px-4 py-3 rounded-lg bg-white/5 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"/>
          </div>

          <!-- Email -->
          <input
            required
            type="email"
            name="email"
            placeholder="Email Address"
            value="<%= oldInput && oldInput.email ? oldInput.email : '' %>"
            class="w-full px-4 py-3 rounded-lg bg-white/5 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"/>

          <!-- Password -->
          <input
            required
            type="password"
            name="password"
            placeholder="Password"
            class="w-full px-4 py-3 rounded-lg bg-white/5 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"/>

          <!-- Confirm Password -->
          <input
            required
            type="password"
            name="confirmPassword"
            placeholder="Confirm Password"
            class="w-full px-4 py-3 rounded-lg bg-white/5 border border-gray-700 text-white placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition"/>

          <!-- User Type -->
          <div class="bg-gray-800/60 border border-gray-700 p-4 rounded-lg">
            <p class="text-sm font-semibold text-gray-300 mb-3">Account Type</p>
            <div class="flex gap-4">
              <label class="flex items-center gap-3 cursor-pointer">
                <input type="radio" name="userType" value="guest" id="guest"
                       class="w-4 h-4 text-indigo-500 bg-gray-700 border-gray-600"
                       <%= oldInput && oldInput.userType === "guest" ? "checked" : "" %> />
                <span class="text-gray-300">Guest</span>
              </label>

              <label class="flex items-center gap-3 cursor-pointer">
                <input type="radio" name="userType" value="host" id="host"
                       class="w-4 h-4 text-indigo-500 bg-gray-700 border-gray-600"
                       <%= oldInput && oldInput.userType === "host" ? "checked" : "" %> />
                <span class="text-gray-300">Host</span>
              </label>
            </div>
          </div>

          <!-- Terms -->
          <div class="flex items-start gap-3">
            <input type="checkbox" name="terms" id="terms" required class="w-4 h-4 text-indigo-500 bg-gray-700 border-gray-600 mt-1" />
            <label for="terms" class="ml-1 text-sm text-gray-300">I agree to the <span class="text-indigo-300 font-semibold">Terms and Conditions</span></label>
          </div>

          <!-- Submit Button -->
          <input
            type="submit"
            value="Register"
            class="w-full inline-flex items-center justify-center gap-2 px-6 py-3 rounded-xl text-lg font-semibold text-white
                   bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 shadow-lg transform hover:scale-105 transition duration-300 cursor-pointer"/>
        </form>

        <p class="text-center text-sm text-gray-400 mt-6">
          Already have an account?
          <a href="/login" class="text-indigo-300 font-semibold hover:text-indigo-100 ml-1">Sign In</a>
        </p>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
