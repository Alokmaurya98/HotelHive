<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-700 via-gray-500 to-slate-800 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="container mx-auto mt-16 px-4 max-w-6xl">
    <h2 class="text-4xl font-extrabold text-center mb-10 tracking-wide
               bg-gradient-to-r from-pink-300 via-purple-400 to-indigo-400
               bg-clip-text text-transparent drop-shadow-xl">
      Details of <%= home.houseName %>
    </h2>

    <div class="bg-gradient-to-br from-slate-900 via-gray-800 to-black rounded-2xl shadow-2xl overflow-hidden border border-gray-800">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-0">
        <!-- Image -->
        <div class="relative h-96 md:h-auto">
          <% if (home.photo) { %>
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-full object-cover">
          <% } else { %>
            <div class="w-full h-full bg-gray-800 flex items-center justify-center text-gray-500">
              No image available
            </div>
          <% } %>
          <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
          <div class="absolute left-6 bottom-6">
            <span class="inline-block px-3 py-1 rounded-full bg-black/50 text-white text-sm font-semibold">
              <%= home.location %>
            </span>
          </div>
        </div>

        <!-- Details column -->
        <div class="p-8 md:p-10 space-y-6">
          <div>
            <h3 class="text-2xl md:text-3xl font-bold text-white mb-2"><%= home.houseName %></h3>
            <p class="text-sm text-gray-300 mb-4"><i class="fas fa-map-marker-alt mr-2 text-red-500"></i><%= home.location %></p>
          </div>

          <div class="grid grid-cols-1 gap-4">
            <div class="bg-gray-800/60 border border-gray-700 rounded-xl p-5">
              <h4 class="text-lg font-semibold text-gray-100 mb-2">Description</h4>
              <p class="text-gray-300"><%= home.description %></p>
            </div>

            <div class="bg-gray-800/60 border border-gray-700 rounded-xl p-5">
              <h4 class="text-lg font-semibold text-gray-100 mb-2">Location</h4>
              <p class="text-gray-300"><%= home.location %></p>
            </div>

            <div class="bg-gray-800/60 border border-gray-700 rounded-xl p-5 flex items-center justify-between">
              <div>
                <h4 class="text-lg font-semibold text-gray-100">Price</h4>
                <p class="text-green-400 text-xl font-bold mt-1">Rs <%= home.price %> <span class="text-sm text-gray-400 font-medium">/ night</span></p>
              </div>

              <div class="text-right">
                <div class="text-sm text-gray-400">Rating</div>
                <div class="flex items-center gap-2 mt-1">
                  <svg class="w-5 h-5 text-yellow-400" viewBox="0 0 24 24" fill="currentColor"><path d="M12 17.27L18.18 21 16.54 13.97 22 9.24l-7.19-.62L12 2 9.19 8.62 2 9.24l5.46 4.73L5.82 21z"/></svg>
                  <span class="text-gray-100 font-semibold"><%= home.rating %> / 5</span>
                </div>
              </div>
            </div>
          </div>

          <div class="flex flex-wrap items-center gap-4 pt-2">
            <a href="/reserve/<%= home._id %>" class="inline-block px-6 py-3 rounded-full text-white font-semibold
               bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 shadow-lg transition-transform transform hover:scale-105">
              Book Now
            </a>

            <!-- pass home to favourite partial if it expects it -->
            <div>
              <%- include('../partials/favourite', { home: home }) %>
            </div>

            <a href="/homes" class="ml-auto inline-block px-5 py-3 rounded-lg text-white bg-gray-800/60 border border-gray-700 hover:bg-gray-800 transition">
              Back to listings
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
