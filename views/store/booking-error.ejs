<%- include('../partials/head') %>
</head>
<body class="bg-gradient-to-br from-slate-700 via-gray-500 to-slate-800 min-h-screen">
<%- include('../partials/nav') %>

<section class="min-h-screen flex items-center justify-center py-12 px-4">
  <div class="bg-gradient-to-br from-slate-900 via-gray-800 to-black rounded-2xl shadow-2xl p-10 max-w-xl text-center border border-gray-700">

    <!-- Icon -->
    <div class="mx-auto flex items-center justify-center w-20 h-20 bg-red-600/20 rounded-full shadow-inner mb-6 border border-red-600/30">
      <svg class="w-12 h-12 text-red-500" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-.75-11.5a.75.75 0 011.5 0v4.5a.75.75 0 01-1.5 0V6.5zm.75 7a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"/>
      </svg>
    </div>

    <h1 class="text-3xl font-extrabold mb-3 
               bg-gradient-to-r from-red-400 via-red-500 to-red-600 
               bg-clip-text text-transparent drop-shadow-xl">
      Dates Unavailable
    </h1>

    <p class="text-gray-300 text-lg mb-6">
      <%= message %>
    </p>

    <div class="bg-gray-800/50 border border-gray-700 rounded-xl p-4 mb-6">
      <p class="text-gray-400 text-sm">
        The home you are trying to book:
      </p>
      <p class="text-lg font-semibold text-white mt-1">
        <%= home.houseName || home.name %>
      </p>
      <p class="text-gray-400">
        <%= home.location %>
      </p>
    </div>

    <div class="flex flex-col md:flex-row gap-4 justify-center mt-6">

      <a href="/reserve/<%= home._id %>"
         class="px-6 py-3 rounded-full text-white font-semibold 
                bg-gradient-to-r from-red-500 to-red-700 
                hover:from-red-600 hover:to-red-800 shadow-lg transition">
        Try Different Dates
      </a>

      <a href="/my-bookings"
         class="px-6 py-3 rounded-full text-white font-semibold 
                bg-gradient-to-r from-gray-600 to-gray-800 
                hover:from-gray-700 hover:to-gray-900 shadow-lg transition">
        Back to My Bookings
      </a>

    </div>

  </div>
</section>

<%- include('../partials/footer') %>
</body>
</html>
