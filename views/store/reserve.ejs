<%- include('../partials/head') %>
  </head>
   <%- include('../partials/nav') %>
<section class="min-h-screen flex items-center justify-center bg-gradient-to-br from-gray-900 via-gray-800 to-black py-10 px-4">
  <div class="w-full max-w-4xl bg-white/10 backdrop-blur-lg shadow-2xl rounded-3xl p-8 md:p-12 border border-white/20 animate-fade-in">
    <!-- Heading -->
    <div class="mb-10 text-center">
      <h1 class="text-4xl md:text-5xl font-extrabold text-white tracking-tight drop-shadow-lg">
        Reserve Your Dream Stay
      </h1>
      <p class="text-gray-300 mt-3 text-lg">
        Enter your details to secure your perfect accommodation.
      </p>
    </div>

    <form action="/reserve" method="POST" class="space-y-8">
      <input type="hidden" name="homeId" value="<%= home._id %>">
      <!-- Guest Info -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Full Name
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
            </svg>
            <input
              type="text"
              name="fullName"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
              placeholder="John Doe"
            >
          </div>
        </div>

        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Email
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
            </svg>
            <input
              type="email"
              name="email"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
              placeholder="you@example.com"
            >
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Phone Number
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
            </svg>
            <input
              type="tel"
              name="phone"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
              placeholder="+91 98765 43210"
            >
          </div>
        </div>

        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Number of Guests
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            <input
              type="number"
              name="guests"
              min="1"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
              placeholder="2"
            >
          </div>
        </div>
      </div>

      <!-- Dates -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Check-in Date
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
            </svg>
            <input
              type="date"
              name="checkIn"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
            >
          </div>
        </div>

        <div class="relative">
          <label class="block text-sm font-semibold text-white mb-2">
            Check-out Date
          </label>
          <div class="relative">
            <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
            </svg>
            <input
              type="date"
              name="checkOut"
              required
              class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30"
            >
          </div>
        </div>
      </div>

      <!-- Special Requests -->
      <div class="relative">
        <label class="block text-sm font-semibold text-white mb-2">
          Special Requests (optional)
        </label>
        <div class="relative">
          <svg class="absolute left-3 top-3 w-5 h-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
          </svg>
          <textarea
            name="specialRequests"
            rows="4"
            class="w-full pl-10 pr-3 py-3 rounded-xl bg-white/20 border border-white/30 focus:border-purple-400 focus:ring-purple-400 text-white placeholder-gray-400 text-sm md:text-base transition-all duration-300 hover:bg-white/30 resize-none"
            placeholder="Any special requirements? (Late check-in, extra bed, etc.)"
          ></textarea>
        </div>
      </div>

      <!-- Submit -->
      <div class="pt-6 text-center">
        <button
          type="submit"
          class="inline-flex items-center justify-center px-8 py-4 rounded-xl text-lg font-bold text-white bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 focus:outline-none focus:ring-4 focus:ring-purple-500 focus:ring-opacity-50 shadow-xl hover:shadow-2xl transform hover:scale-105 transition-all duration-300"
        >
          <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
          </svg>
          Confirm Booking
        </button>
      </div>
    </form>
  </div>
</section>
<%- include('../partials/footer') %>