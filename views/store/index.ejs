<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-gradient-to-br from-blue-50 to-indigo-100 shadow-lg rounded-lg p-8 mt-12 max-w-6xl">
      <h2 class="text-4xl text-indigo-700 font-bold text-center mb-8 shadow-lg border-b border-indigo-200 pb-4">
        Welcome to EliteStay!:
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-md overflow-hidden hover:shadow-2xl hover:scale-105 transition duration-300 w-full max-w-sm border border-gray-200">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover">
            <div class="p-6">
              <h3 class="text-xl font-semibold text-indigo-700 mb-2"><%= home.houseName %></h3>
              <p class="text-gray-600 mb-2"><i class="fas fa-map-marker-alt mr-2"></i><%= home.location %></p>
              <div class="flex justify-between items-center mb-2">
                <span class="text-lg font-bold text-red-500">Rs<%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 text-yellow-400 mr-1">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5-006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-700"><%= home.rating %></span>
                </div>
              </div>
              <%if (isLoggedIn) { %>
              <button class="bg-gradient-to-r from-green-400 to-green-600 text-white font-semibold p-2 rounded-xl hover:bg-green-500 transition">Book</button>
              <%} %>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
  </body>
</html>