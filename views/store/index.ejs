<%- include('../partials/head') %>
  </head>
  <body class="bg-gradient-to-br from-slate-700 via-gray-500 to-slate-800 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-gradient-to-br from-slate-900 via-gray-800 to-black shadow-2xl rounded-2xl p-10 mt-16 max-w-7xl">
     
<h2 class="text-6xl font-extrabold text-center mb-12 pb-6 tracking-wide
      bg-gradient-to-r from-pink-300 via-purple-400 to-indigo-400 
       bg-clip-text text-transparent font-playfair drop-shadow-xl">
  Welcome to EliteStay!
</h2>


      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% registeredHomes.forEach(home => { %>
          <div class="bg-gradient-to-br from-white via-gray-50 to-gray-100 rounded-2xl shadow-2xl overflow-hidden hover:shadow-3xl hover:scale-105 transition-all duration-500 w-full max-w-sm border border-gray-200 backdrop-blur-sm">
            <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-56 object-cover">
            <div class="p-8">
              <h3 class="text-2xl font-bold mb-3 bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent"><%= home.houseName %></h3>
              <p class="text-gray-700 mb-4 flex items-center"><i class="fas fa-map-marker-alt mr-3 text-red-500"></i><%= home.location %></p>
              <div class="flex justify-between items-center mb-6">
                <span class="text-xl font-extrabold bg-gradient-to-r from-green-600 to-green-800 bg-clip-text text-transparent">Rs<%= home.price %> / night</span>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 text-yellow-500 mr-2">
                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5-006z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-gray-900 font-semibold"><%= home.rating %></span>
                </div>
              </div>
              <%if (isLoggedIn && user.userType==="guest") { %>
              <a href="/reserve/<%= home._id %>" class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-6 py-3 rounded-full hover:from-blue-700 hover:to-purple-700 transition-all duration-300 font-semibold shadow-lg">
                      Book Now
                      </a>
              <%} %>
            </div>
          </div>
        <% }) %>
      </div>
    </main>
     <%- include('../partials/footer') %>
  </body>
</html>